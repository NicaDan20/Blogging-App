<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= blogPost.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label for="subtitle">Subtitle</label>
    <input required value="<%= blogPost.subtitle %>" type="text" name="subtitle" id="subtitle" class="form-control">
</div>

<div class="form-group-sm">
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"> <%= blogPost.description %> </textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"> <%= blogPost.markdown %> </textarea>
</div>

<div class="form-group">
    <label for="tagText">Tags (separate by comma)</label>
    <input value="<%= blogPost.tagText %>" name="tagText" id="tagText" class="form-control">  </input>
</div>


<button type="submit" class="btn btn-success">Publish</button>
<a href="/blog" class="btn btn-danger">Cancel</a>